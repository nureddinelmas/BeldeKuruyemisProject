<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:divider="?android:dividerHorizontal"
    android:showDividers="middle"
    tools:context=".ui.contact.ContactFragment">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/belde_logo" />

<fragment
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:orientation="vertical"/>

    <include
        android:id="@+id/innerLayout"
        layout="@layout/contact_extra_layout"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="56dp"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="BIZIM ILE ILETISIME GECMEK ICIN FORMU DOLDURUN"
            android:textSize="20sp"
            app:fontFamily="sans-serif-black"
            android:paddingTop = "10dp"
            android:maxLines ="2"
            android:paddingBottom = "10dp"/>

    <Spinner
        android:id="@+id/spinner"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/round_spinner_item"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:dropDownVerticalOffset = "37dp"/>

    <EditText
        android:id="@+id/nameText"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_margin="16dp"
        android:background="@drawable/edittext_layout"
        android:drawablePadding="12dp"
        android:ems="10"
        android:hint="Lütfen adınızı ve soyadınızı yazınız..."
        android:inputType="textMultiLine"
        android:lines="8"
        android:maxLines="10"
        android:minLines="6"
        android:paddingStart="20dp"
        android:scrollbars="vertical"
        android:textColor="#090707"

        android:textColorHint="#AEA9A9" />

    <EditText
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="Lütfen mesajınızı buraya yazınız..."
        android:lines="8"
        android:inputType="textMultiLine"
        android:ems ="10"
        android:paddingStart="20dp"
        android:paddingTop ="10dp"
        android:background="@drawable/edittext_layout"
        android:scrollbars="vertical"
        android:gravity="left|top" />
    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Gönder"
        android:textColor="@android:color/white"
        android:background="@drawable/round_style" />

    </LinearLayout>



</LinearLayout>
</ScrollView>
